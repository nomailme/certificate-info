<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CertificateViewer.Controls.Dialogs.PasswordBox"
        Title="Password box" Width="400"
        SizeToContent="Height">
    <StackPanel Orientation="Vertical" Margin="8">
        <Label>Enter password</Label>
        <TextBox Name="PasswordTextBox" PasswordChar="*" RevealPassword="False" MaxLength="1000"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8">
            <Button Click="Ok_OnClick" IsDefault="True">Ok</Button>
            <Button Click="Cancel_OnClick" IsCancel="True">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
