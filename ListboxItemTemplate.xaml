<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:certificateViewerPlayground="clr-namespace:CertificateViewerPlayground">
    <DataTemplate x:Key="CertificateListboxItemTemplate" DataType="{x:Type certificateViewerPlayground:CertificateVm}">
        <Border Background="Transparent" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="4" Padding="5" HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal">
                <Image Source="Icons/certificate.png" Height="32" Width="32" Margin="0,0,10,0" />
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding Subject, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="{Binding Issuer, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Text="{Binding Validity, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>
