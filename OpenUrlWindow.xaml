<Window x:Class="CertificateViewerPlayground.OpenUrlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CertificateViewerPlayground"
        mc:Ignorable="d"
        Title="OpenUrlWindow" Height="Auto" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock>Enter server URL</TextBlock>
            <TextBox x:Name="InputBox" />
            <StackPanel>
                <Button Click="ButtonBase_OnClick">Ok</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
